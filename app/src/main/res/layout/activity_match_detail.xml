<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:id="@+id/match_detail_toolbar"
            android:background="@color/colorPrimary"
            app:titleTextColor="@android:color/white"
            style="@style/AppTheme.FullScreen"
    />

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="@dimen/zero"
            app:layout_constraintTop_toBottomOf="@id/match_detail_toolbar"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <include layout="@layout/include_match_detail_score"
                     android:id="@+id/include_match_detail_score_holder"
            />

            <View android:layout_width="match_parent"
                  android:layout_height="@dimen/separator_height"
                  android:background="@drawable/bg_separator"
                  app:layout_constraintTop_toBottomOf="@id/include_match_detail_score_holder"
            />

            <include layout="@layout/include_match_detail_information"
                     android:id="@+id/include_match_detail_info_holder"
            />

        </LinearLayout>

    </ScrollView>

    <ProgressBar
            android:id="@+id/match_detail_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
    />

</android.support.constraint.ConstraintLayout>