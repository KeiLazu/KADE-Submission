<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/distance_each_card"
        app:cardElevation="@dimen/generic_card_elevation"
>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/generic_margin_top"
            android:paddingBottom="@dimen/generic_margin_bottom"
            android:paddingStart="@dimen/generic_margin_top"
            android:paddingEnd="@dimen/generic_margin_top"
    >

        <TextView
                android:id="@+id/list_item_next_match_list_date_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:textSize="@dimen/text_size_date"
                app:layout_constraintTop_toTopOf="parent"
                style="@style/TextAppearanceInfo"
        />

        <TextView
                android:id="@+id/list_item_next_match_list_home_name_club"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/list_item_next_match_list_home_score"
                app:layout_constraintBottom_toBottomOf="@id/list_item_next_match_list_home_score"
                app:layout_constraintEnd_toStartOf="@id/list_item_next_match_list_home_score"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_club_name"
                android:text=""
                style="@style/TextAppearanceList.Home"
        />

        <TextView
                android:id="@+id/list_item_next_match_list_home_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/list_item_next_match_list_home_name_club"
                app:layout_constraintTop_toTopOf="@id/list_item_next_match_list_versus"
                app:layout_constraintBottom_toBottomOf="@id/list_item_next_match_list_versus"
                app:layout_constraintEnd_toStartOf="@id/list_item_next_match_list_versus"
                android:textSize="@dimen/text_size_score"
                android:textStyle="bold"
                android:text="@string/base_score"
                style="@style/TextAppearanceInfo.HomeScore"
        />

        <TextView
                android:id="@+id/list_item_next_match_list_versus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/list_item_next_match_list_date_time"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_date"
                android:text="@string/text_versus"
                app:layout_constraintVertical_bias="0.6"
        />

        <TextView
                android:id="@+id/list_item_next_match_list_away_name_club"
                android:layout_width="@dimen/zero"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/list_item_next_match_list_away_score"
                app:layout_constraintBottom_toBottomOf="@id/list_item_next_match_list_away_score"
                app:layout_constraintStart_toEndOf="@id/list_item_next_match_list_away_score"
                style="@style/TextAppearanceList.Away"
                android:textSize="@dimen/text_size_club_name"
                android:text=""
        />

        <TextView
                android:id="@+id/list_item_next_match_list_away_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="@id/list_item_next_match_list_versus"
                app:layout_constraintBottom_toBottomOf="@id/list_item_next_match_list_versus"
                app:layout_constraintStart_toEndOf="@id/list_item_next_match_list_versus"
                app:layout_constraintEnd_toStartOf="@id/list_item_next_match_list_away_name_club"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_size_score"
                android:textStyle="bold"
                android:text="@string/base_score"
                style="@style/TextAppearanceInfo.AwayScore"
        />

        <ImageView
                android:id="@+id/list_item_next_match_list_notification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_notifications_none_primary_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="@string/icon_notification"
        />

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>