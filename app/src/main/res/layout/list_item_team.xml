<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="@dimen/padding_all_parent_list_item_team"
>

    <ImageView
            android:layout_width="@dimen/img_generic_badge_size"
            android:layout_height="@dimen/img_generic_badge_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:contentDescription="@string/img_badge"
            android:src="@drawable/ic_launcher_background"
            android:id="@+id/list_item_team_img_badge"
    />

    <TextView
            android:layout_width="@dimen/zero"
            android:layout_height="wrap_content"
            android:id="@+id/list_item_team_tv_team_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/list_item_team_img_badge"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/padding_all_parent_list_item_team"
    />

</android.support.constraint.ConstraintLayout>