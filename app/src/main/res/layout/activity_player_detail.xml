<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".ui.activities.playerdetail.view.PlayerDetailActivity">

	<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<ImageView
			android:id="@+id/player_detail_img_fanart"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:contentDescription="@string/img_player_detail"
			android:maxHeight="@dimen/img_size_fanart" />

		<TextView
			android:id="@+id/player_detail_tv_name_output"
			android:layout_width="@dimen/zero"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="@dimen/text_size_big"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/player_detail_img_fanart" />

		<TextView
			android:id="@+id/player_detail_tv_height"
			android:layout_width="@dimen/zero"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/text_player_height"
			android:textSize="@dimen/text_size_medium"
			app:layout_constraintEnd_toStartOf="@id/player_detail_tv_weight"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/player_detail_tv_name_output" />

		<TextView
			android:id="@+id/player_detail_tv_weight"
			android:layout_width="@dimen/zero"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:text="@string/text_player_weight"
			android:textSize="@dimen/text_size_medium"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/player_detail_tv_height"
			app:layout_constraintTop_toBottomOf="@id/player_detail_tv_name_output" />

		<TextView
			android:id="@+id/player_detail_tv_height_output"
			android:layout_width="@dimen/zero"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="@dimen/text_size_big"
			android:textStyle="bold"
			app:layout_constraintEnd_toStartOf="@id/player_detail_tv_weight_output"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/player_detail_tv_height" />

		<TextView
			android:id="@+id/player_detail_tv_weight_output"
			android:layout_width="@dimen/zero"
			android:layout_height="wrap_content"
			android:gravity="center"
			android:textSize="@dimen/text_size_big"
			android:textStyle="bold"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toEndOf="@id/player_detail_tv_height_output"
			app:layout_constraintTop_toBottomOf="@id/player_detail_tv_weight" />

		<TextView
			android:id="@+id/player_detail_tv_player_description_output"
			android:layout_width="@dimen/zero"
			android:layout_height="wrap_content"
			android:gravity="center"
			app:layout_constraintEnd_toEndOf="parent"
			app:layout_constraintStart_toStartOf="parent"
			app:layout_constraintTop_toBottomOf="@id/player_detail_tv_height_output" />

	</android.support.constraint.ConstraintLayout>

</ScrollView>